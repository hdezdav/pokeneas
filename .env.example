# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# AWS S3 Configuration
S3_BUCKET=your-bucket-name-here
S3_REGION=us-east-1

# S3 URL Mode
# Set to 'true' to use presigned URLs (requires AWS credentials)
# Set to 'false' to use public URLs (bucket must be public)
USE_S3_PRESIGNED=false

# Optional: Custom S3 public base URL
# If not set, will use: https://{bucket}.s3.{region}.amazonaws.com
S3_PUBLIC_BASE_URL=

# AWS Credentials (only required if USE_S3_PRESIGNED=true)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Presigned URL Configuration
PRESIGNED_URL_EXPIRATION=3600
